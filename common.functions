}

function prn_col () {
        local next
        for next in $* ; do
                echo $next
        done
} 

function sed_jq_to_ini (){
cat /dev/stdin | jq . |
egrep -v -e '^\s*}\s*$' -e '^\s*]\s*$' |
sed -r  -e '/^$/d' -e 's/^  //g' -e 's/^(\s*)"/\1/g' -e 's/": ?/=/g' -e 's/[,]$//g'
}

function json_to_fs () {
# cat  < <(  json_to_fs $testdir/ "$json" ) to hide info about bg processes
local key keys dir=$1 json="$2" value ptype type
if [[ -z $json ]] ; then
	json=$(/bin/cat /dev/stdin)
fi
mkdir -p "$dir"
ptype=$(echo $json| jq -r type)
# jq sorts keys itself'
keys=$(echo "$json" | jq 'keys[]' 2>/dev/zero) || return 0
for key in $keys ; do
    case $ptype in
		array)
		value=$(echo $json | jq .[$key])
		;;
		*)	
		value=$(echo $json | jq .$key)
		;;
	esac
	key=$( echo $key | jq -r . )
	type=$(echo $value | jq -r type 2>/dev/zero) || continue
	case $type in
		array)
		json_to_fs "$dir/${key}[]" "$value" &
		echo "$json" >  "$dir"/.json
		;;
		object)
		json_to_fs "$dir/${key}" "$value" &
		echo "$json" >  "$dir"/.json
		;;
		*)
		(( i <= 0 )) && continue	
		/bin/echo "$value" > $dir/"$key" &
		;;
	esac
done 
wait
((i--))
}

function json_to_ini () {

local key keys json="$1"
if [[ -z $json ]] ; then
	json=$(/bin/cat /dev/stdin)
fi
info='jq sorts keys itself'
keys=$(echo "$json" | jq 'keys[]' 2>/dev/zero) || return 0
i=0
for key in $keys ; do
#    if value=$(get_key $key "$json") ; then
    if value=$(jq -n "$json | .$key") ; then
		if echo $value | jq type 2>/dev/zero | egrep -q 'array' ; then
			local length=$(echo $value | jq length)
			local i
			printf %-22s $( jq -r -n $key)
			echo [$length]
			logic='Can be done but it takes time'
			(( length > 0 )) && continue
			for i in `seq $length` ; do
			echo "$value" | jq  .[$i] | json_to_ini 
			done
		elif echo $value | jq type 2>/dev/zero | egrep -q 'object' ; then
			printf %-22s $( jq -r -n $key)
			echo  object
			echo "$value" | json_to_ini 
		else	
			printf %-22s $( jq -r -n $key)
			echo $value
		fi
	fi
done 

}

function json_to_vars () {
local keys json="$1"
keys=$(echo "$json" | jq -r 'keys | .[]');
for key in $keys ; do
    value=$(get_key $key "$json")
	key=$value
done

}

function arr2json () {
readme="
    Converts bash array to json.
    Expects array name as the first argument
    Array should be passed as a list of items separated by newlines
    Array argument should be quoted"
local arrname=$1 array
shift
array="$@"
jq -n --arg array "$array" {${arrname}': $array  | split("\n")}'
}

function is_json () {
if [[ -f "$1" ]] ; then
    /bin/cat "$1"
else
    echo "$1"
fi | jq -e . 2>/dev/zero |
egrep -q -m 1 '{' 2>/dev/zero
local trick='jq returns 0 on empty file. Grepping for '
}

function jqres () {
args_to_vars json "$@"
jq -n "$json | { res: . }"
}

function has_key () {
local key="$1" json="$2"
if [[ -f "$json" ]] ; then
	/bin/cat "$json" | jq  -e '. | has("'$key'")' > /dev/zero
else
	jq -n -e "$json"' | . | has("'$key'")' > /dev/zero
fi
} 

function args_to_vars () {
local arg k j 
json=0 
if [[ x$1 == xjson ]] ; then
	json=1
	shift
fi
for arg in "$@" ; do
	k=${arg%%=*}
	#keys="$k $keys"
	for k in $k ; do
		export $k="${arg#*=}"
	done
done

[[ $json == 0 ]] && return
local key value
json='{}'
for arg in "$@" ; do
	key=${arg%%=*}
	value="${arg#*=}"
	echo "$value" | jq type 1>/dev/zero 2>/dev/zero || value=$(echo $value | jq -R .)
	if echo $value | egrep -q '^[0-9]+$' ; then
		json=$( jq -n "$json | .$key=$value")
	else
		json=$( jq -n "$json | .$key=$value")
	fi
done  

} # end function


function get_key () {
local key json="$2"
logic='convert json string to bash string. That is, unquote if necessary'
jq -e -n "$1" 2>/dev/zero 1>&2 && key=$(jq -n -r "$1") || key="$1"
jq -n -e "$json | .${key}"
} 

function json_dump_py () {
local py_cmd='import sys,json;
print (json.load(sys.stdin) , indent 3)'

if [[ -n "$*" ]] ; then
    echo "$*" | python -c "$py_cmd"
else
    while read line ; do
        echo $line
    done | python -c "$py_cmd"
fi
} # end function

